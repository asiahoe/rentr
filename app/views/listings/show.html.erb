<h1><%= @listing.name %></h1>
<article class="listing">


<% if current_user.owns?(@listing) %>
  <%= link_to "Edit", edit_listing_path(@listing) %>
  <%= link_to "Delete", listing_path(@listing), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<div class="listing-params">
  <div class="listing-photo">
    <%= image_tag @listing.image_url, width:400 %>
  </div>
<p><%= @listing.description %></p>
<p><%= @listing.number_of_room %> Rooms</p>

  <div class="amenities">
    <ul>Amenities
      <li>Kitchen: <%= check_amenity @listing.kitchen %></li>
      <li>TV: <%= check_amenity @listing.tv %></li>
      <li>Internet: <%= check_amenity @listing.internet %></li>
      <li>Essentials: <%= check_amenity @listing.essentials %></li>
      <li>Shampoo: <%= check_amenity @listing.shampoo %></li>
      <li>Heating: <%= check_amenity @listing.heating %></li>
      <li>Air Conditioning: <%= check_amenity @listing.conditioning %></li>
      <li>Washer: <%= check_amenity @listing.washer %></li>
      <li>Dryer: <%= check_amenity @listing.dryer %></li>
      <li>Indoor Fireplace: <%= check_amenity @listing.indoor_fireplace %></li>
    </ul>
  </div>

  <div class="price">
    <p>price: <%= @listing.price %></p>
  </div>
</div>

<div class="owner-params">
  <h3>User: <%= @listing.user.name %></h3>
  <%= link_to (image_tag @listing.user.image_url, width: 200), user_path(@listing.user) %>
  <p>Bio: <%= @listing.user.bio %></p>
</div>
</article>
