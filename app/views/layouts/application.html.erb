<!DOCTYPE html>
<html>
<head>
  <title>Rentr</title>
  <meta charset="utf-8">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="//use.typekit.net/nrc2kuk.js"></script>
  <script>try{Typekit.load();}catch(e){}</script>
</head>
<body>
  <div class="full">
    <header class="container">
      <h1 class="logotype"><a href="/">Rentr</a></h1>
      <nav>
        <ul>
          <li><%= link_to "View Listings", listings_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Add Listing", new_listing_path %></li>
            <li><%= link_to "Log Out", session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign Up", new_user_path %></li>
            <li><%= link_to "Sign In", new_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </header>
  </div>
  <main class="container">
    <%= yield %>
  </main>
  <script src="http://localhost:35729/livereload.js"></script>
</body>
</html>
